<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.vinea.mapper.userMapper">


	<resultMap id="userMap" type="com.vinea.dto.UserVO">

        <result property="userNum" column="USER_NO_PK" />
		<result property="userId" column="USER_ID" />
		<result property="userPw" column="USER_PW" />
		<result property="userEmail" column="USER_EMAIL" />
		
     </resultMap>
     
     
	<insert id="create">
	
		Insert INTO USER_TB(user_id,user_pw,user_email)
		values(#{userId},#{userPw},#{userEmail})
		
	</insert>

     
	<select id ="selectUser" resultType="com.vinea.dto.UserVO">
	
		SELECT
		 USER_NO_PK,USER_ID,USER_PW,USER_EMAIL
		FROM
		 USER_TB 
	</select>

	<select id="idCheck" parameterType="String" resultType="java.lang.Integer">
    	
   		SELECT
   			COUNT(USER_NO_PK)
   		FROM
		 USER_TB
		 
		WHERE
		 USER_ID=#{userId}
   		 
    </select>

	<select id="login" resultMap="userMap">
		
	
		SELECT
		 USER_NO_PK,USER_ID,USER_PW,USER_EMAIL
		FROM
		 USER_TB
		WHERE
		 USER_ID = #{userId} AND USER_PW = #{userPw}
		
	</select>

</mapper>