<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.jupo.board.user.service.impl.UserDAO">

	<!-- 
	userNum : 회원 번호 (기본키)
	userId : 회원 아이디
	userPw : 회원 비밀번호
	userEmail : 회원 이메일
	 -->
	 
	<resultMap id="userMap" type="com.jupo.board.user.vo.UserVO">

		<result property="userNum" column="USER_NO_PK" />
		<result property="userId" column="USER_ID" />
		<result property="userPw" column="USER_PW" />
		<result property="userEmail" column="USER_EMAIL" />
		
     </resultMap>
     
     
	<insert id="insertUserInfo" parameterType="userVO">
	<!-- 회원가입 -->
	
		INSERT INTO
		
		USER_TB
		(
			USER_ID
		,	USER_PW
		,	USER_EMAIL
		)
		
		VALUES
		(
			#{userId}
		,	#{userPw}
		,	#{userEmail}
		)
		
	</insert>

	<select id="idCheck" parameterType="String" resultType="java.lang.Integer">
    <!-- 아이디 중복확인 (같은 아이디 개수 리턴) -->
   		SELECT
   			COUNT(USER_NO_PK)
   			
   		FROM
			USER_TB
		 
		WHERE
			USER_ID = #{userId}
   		 
    </select>

	<select id="selectUserInfo" resultMap="userMap">
	<!-- 입력한 아이디 유저 정보 리턴 -->
	
		SELECT
			  USER_NO_PK
			, USER_ID
			, USER_PW
			, USER_EMAIL
		FROM
			USER_TB
		 
		WHERE
			USER_ID = #{userId}
		
	</select>

</mapper>